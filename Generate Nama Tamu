<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Generator Tautan Undangan</title>
    <!-- Menggunakan Tailwind CSS untuk styling -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Library SheetJS untuk membaca file Excel -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
    <!-- Menggunakan font Inter dari Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
        /* Style kustom untuk input file */
        .file-input-button {
            cursor: pointer;
            padding: 0.75rem 1rem;
            border-radius: 0.5rem;
            background-color: #4f46e5; /* indigo-600 */
            color: white;
            font-weight: 600;
            transition: background-color 0.2s;
        }
        .file-input-button:hover {
            background-color: #4338ca; /* indigo-700 */
        }
    </style>
</head>
<body class="bg-slate-100 flex items-center justify-center min-h-screen p-4">

    <div class="bg-white w-full max-w-2xl p-8 rounded-2xl shadow-lg">
        <!-- Header Aplikasi -->
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold text-slate-800">Generator Tautan Undangan</h1>
            <p class="text-slate-500 mt-2">Buat tautan untuk satu tamu atau impor dari file Excel.</p>
        </div>

        <!-- Opsi 1: Form Input Nama Tunggal -->
        <form id="guest-form" class="space-y-4">
            <div>
                <label for="guest-name" class="block text-sm font-medium text-slate-700 mb-1">Nama Tamu (Satu per Satu)</label>
                <input 
                    type="text" 
                    id="guest-name" 
                    name="guest-name"
                    class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none transition-shadow"
                    placeholder="Contoh: Bagus Adi & Keluarga"
                >
            </div>
            <button 
                type="submit"
                class="w-full bg-blue-600 text-white font-semibold py-3 px-4 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors"
            >
                Buat Tautan Tunggal
            </button>
        </form>
        
        <!-- Pemisah -->
        <div class="relative my-8">
            <div class="absolute inset-0 flex items-center" aria-hidden="true">
                <div class="w-full border-t border-slate-300"></div>
            </div>
            <div class="relative flex justify-center">
                <span class="bg-white px-3 text-base font-medium text-slate-500">ATAU</span>
            </div>
        </div>
        
        <!-- Opsi 2: Impor dari Excel -->
        <div>
            <label for="file-input" class="block text-sm font-medium text-slate-700 mb-2 text-center">Impor Daftar Nama dari File Excel</label>
            <div class="flex justify-center">
                 <label for="excel-file" class="file-input-button">
                    Pilih File (.xlsx, .xls, .csv)
                </label>
                <input 
                    type="file" 
                    id="excel-file" 
                    class="hidden"
                    accept=".xlsx, .xls, .csv"
                >
            </div>
            <p class="text-xs text-slate-500 text-center mt-2">Pastikan nama-nama tamu ada di kolom pertama file Anda.</p>
        </div>

        <!-- Kontainer untuk menampilkan hasil -->
        <div id="results-container" class="mt-8 hidden">
            <h2 class="text-xl font-semibold text-slate-800 mb-4">Hasil Tautan:</h2>
            <!-- Daftar tautan yang dihasilkan akan dimasukkan di sini -->
            <div id="results-list" class="space-y-3 max-h-96 overflow-y-auto pr-2"></div>
        </div>
    </div>

    <script>
        // --- Elemen DOM ---
        const guestForm = document.getElementById('guest-form');
        const guestNameInput = document.getElementById('guest-name');
        const excelFileInput = document.getElementById('excel-file');
        const resultsContainer = document.getElementById('results-container');
        const resultsList = document.getElementById('results-list');

        // --- URL Dasar ---
        const baseUrl = 'https://planetcreative.my.id/rendar-rhadyta/?to=';

        // --- Fungsi untuk Menampilkan Hasil ---
        function displayResults(guestNames) {
            // Bersihkan hasil sebelumnya
            resultsList.innerHTML = '';

            // Jika tidak ada nama, jangan tampilkan apa-apa
            if (!guestNames || guestNames.length === 0) {
                resultsContainer.classList.add('hidden');
                return;
            }

            // Loop melalui setiap nama dan buat elemen HTML-nya
            guestNames.forEach(name => {
                if (!name) return; // Lewati baris kosong

                const encodedGuestName = name.replace(/ /g, '+');
                const finalUrl = baseUrl + encodedGuestName;

                const resultItem = document.createElement('div');
                resultItem.className = 'p-3 bg-slate-50 rounded-lg';
                resultItem.innerHTML = `
                    <p class="font-medium text-slate-700 text-sm mb-1">${name}</p>
                    <div class="flex items-center space-x-2">
                        <input type="text" readonly value="${finalUrl}" class="w-full px-3 py-2 bg-slate-200 border border-slate-300 rounded-md text-slate-600 text-sm">
                        <button class="copy-button bg-slate-600 text-white font-semibold py-2 px-4 rounded-md hover:bg-slate-700 transition-colors text-sm">Salin</button>
                    </div>
                    <p class="copy-notification text-green-600 text-xs mt-1 h-4"></p>
                `;
                resultsList.appendChild(resultItem);
            });

            // Tampilkan kontainer hasil
            resultsContainer.classList.remove('hidden');
        }

        // --- Fungsi untuk Menyalin Teks ---
        function copyUrlToClipboard(buttonElement) {
            const resultItem = buttonElement.closest('.p-3');
            const urlInput = resultItem.querySelector('input[type="text"]');
            const notification = resultItem.querySelector('.copy-notification');

            urlInput.select();
            urlInput.setSelectionRange(0, 99999); // Kompatibilitas mobile

            try {
                document.execCommand('copy');
                notification.textContent = '✔️ Berhasil disalin!';
                // Hilangkan notifikasi setelah 2 detik
                setTimeout(() => {
                    notification.textContent = '';
                }, 2000);
            } catch (err) {
                notification.textContent = 'Gagal menyalin.';
                console.error('Gagal menyalin: ', err);
            }
        }
        
        // --- Event Listener untuk Tombol Salin (Menggunakan Event Delegation) ---
        resultsList.addEventListener('click', (event) => {
            if (event.target.classList.contains('copy-button')) {
                copyUrlToClipboard(event.target);
            }
        });

        // --- Event Listener untuk Form Tunggal ---
        guestForm.addEventListener('submit', (event) => {
            event.preventDefault();
            const guestName = guestNameInput.value.trim();
            if (guestName) {
                displayResults([guestName]);
                guestNameInput.value = ''; // Kosongkan input setelah submit
            } else {
                 resultsContainer.classList.add('hidden');
            }
        });

        // --- Event Listener untuk Upload File Excel ---
        excelFileInput.addEventListener('change', (event) => {
            const file = event.target.files[0];
            if (!file) return;

            const reader = new FileReader();
            reader.onload = (e) => {
                const data = new Uint8Array(e.target.result);
                const workbook = XLSX.read(data, { type: 'array' });
                
                // Ambil sheet pertama
                const firstSheetName = workbook.SheetNames[0];
                const worksheet = workbook.Sheets[firstSheetName];
                
                // Konversi ke array of arrays (mengabaikan header)
                const jsonData = XLSX.utils.sheet_to_json(worksheet, { header: 1 });
                
                // Ambil nama dari kolom pertama (index 0) di setiap baris
                const guestNames = jsonData.map(row => row[0]).filter(name => name); // filter untuk menghapus nama kosong
                
                displayResults(guestNames);
            };
            
            reader.onerror = (err) => {
                console.error("File reading error:", err);
                alert("Gagal membaca file.");
            };

            reader.readAsArrayBuffer(file);
            
            // Reset input file agar bisa memilih file yang sama lagi
            event.target.value = '';
        });
    </script>
</body>
</html>


